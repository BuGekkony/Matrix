<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="3dp"
            android:id="@+id/button_clear"
            android:background="@drawable/buttons_profile"
            android:text="Limpar"
            android:onClick="clearEditText"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/textview_s1"
            android:text="S1: "/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="3dp"
            android:id="@+id/edit_text_s1"
            android:inputType="number"
            android:layout_alignParentTop="true"
            android:layout_below="@+id/textview_s1"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:id="@+id/button_send_s1"
            android:layout_below="@+id/edit_text_s1"
            android:background="@drawable/buttons_profile"
            android:text="Enviar S1"
            android:onClick="sendS1"
            android:enabled="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/textview_s2"
            android:text="S2: "/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="3dp"
            android:id="@+id/edit_text_s2"
            android:inputType="number"
            android:layout_alignParentTop="true"
            android:layout_below="@+id/textview_s2"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:id="@+id/button_send_s2"
            android:layout_below="@+id/edit_text_s2"
            android:background="@drawable/buttons_profile"
            android:text="Enviar S2"
            android:onClick="sendS2"
            android:enabled="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/textview_gb"
            android:text="GB: "/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="3dp"
            android:id="@+id/edit_text_gb"
            android:inputType="number"
            android:layout_alignParentTop="true"
            android:layout_below="@+id/textview_gb"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:id="@+id/button_send_gb"
            android:layout_below="@+id/edit_text_gb"
            android:background="@drawable/buttons_profile"
            android:text="Enviar GB"
            android:onClick="sendGB"
            android:enabled="true"/>

    </RelativeLayout>

</LinearLayout>